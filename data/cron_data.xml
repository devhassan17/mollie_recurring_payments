<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cron_mollie_subscription_charges" model="ir.cron">
            <field name="name">Mollie: Process Subscription Charges</field>
            <field name="model_id" ref="model_mollie_subscription_cron"/>
            <field name="state">code</field>
            <field name="code">model.run_subscription_charges()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

        <record id="cron_mollie_refresh_last_payment_status" model="ir.cron">
            <field name="name">Mollie: Refresh Last Payment Status</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.cron_refresh_mollie_last_payment_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>
