<odoo>
    <record id="ir_cron_mollie_subscription_payment" model="ir.cron">
        <field name="name">Mollie Subscription Payment Processor</field>
        <field name="model_id" ref="model_mollie_subscription_cron"/>
        <field name="state">code</field>
        <field name="code">model.run_subscription_charges()</field>
        <field name="active">True</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cron_recurring_payment" model="ir.cron">
            <field name="name">Mollie: Process Recurring Payments</field>
            <field name="model_id" ref="sale_subscription.model_sale_subscription"/>
            <field name="state">code</field>
            <field name="code">model._cron_recurring_payment()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>