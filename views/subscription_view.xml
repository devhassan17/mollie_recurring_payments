<odoo>
    <record id="view_order_form_mollie" model="ir.ui.view">
        <field name="name">sale.order.form.mollie.recurring</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='order_lines']" position="after">
                <page string="Mollie Recurring">
                    <group>
                        <field name="mollie_mandate_id"/>
                        <field name="recurring_next_date"/>
                        <field name="mollie_retry_count"/>
                        <field name="mollie_max_retries"/>
                        <field name="mollie_failure_reason"/>
                        <field name="mollie_suspended"/>
                    </group>
                    <footer>
                        <button name="action_mollie_retry_payment" string="Force Retry Now" type="object" class="btn-primary"/>
                    </footer>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
