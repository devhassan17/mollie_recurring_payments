<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mollie_mandate_tree" model="ir.ui.view">
            <field name="name">mollie.mandate.tree</field>
            <field name="model">mollie.mandate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="mandate_id"/>
                    <field name="partner_id"/>
                    <field name="method"/>
                    <field name="status" widget="badge" 
                           options="{'success': 'valid', 'warning': 'pending', 'danger': 'invalid'}"/>
                    <field name="created_at"/>
                </tree>
            </field>
        </record>

        <record id="action_mollie_mandate" model="ir.actions.act_window">
            <field name="name">Mollie Mandates</field>
            <field name="res_model">mollie.mandate</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_mollie_mandate" 
                  name="Mollie Mandates" 
                  parent="sale.sale_menu_root"
                  action="action_mollie_mandate"
                  sequence="10"/>
    </data>
</odoo>