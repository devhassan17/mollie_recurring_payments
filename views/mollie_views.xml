<odoo>
    <!-- Partner view -->
    <record id="view_partner_form_mollie" model="ir.ui.view">
        <field name="name">res.partner.form.mollie</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <group string="Mollie Info">
                    <field name="mollie_customer_id"/>
                    <field name="mollie_mandate_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Sale Order view -->
    <record id="view_sale_order_form_mollie" model="ir.ui.view">
        <field name="name">sale.order.form.mollie</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <group string="Mollie Recurring Info">
                    <field name="mollie_mandate_id"/>
                    <field name="recurring_next_date"/>
                    <field name="mollie_retry_count"/>
                    <field name="mollie_max_retries"/>
                    <field name="mollie_failure_reason"/>
                    <field name="mollie_suspended"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Tree view for quick monitoring -->
    <record id="view_sale_order_tree_mollie" model="ir.ui.view">
        <field name="name">sale.order.tree.mollie</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="after">
                <field name="mollie_mandate_id"/>
                <field name="recurring_next_date"/>
            </xpath>
        </field>
    </record>
</odoo>
