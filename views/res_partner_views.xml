<odoo>
    <record id="view_partner_mollie_info" model="ir.ui.view">
        <field name="name">res.partner.form.mollie</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <group string="Mollie Info">
                    <field name="mollie_customer_id" readonly="1"/>
                    <field name="mollie_mandate_id" readonly="1"/>
                    <field name="mollie_transaction_id"/>
                    <field name="mollie_mandate_status" readonly="1"/>

                    <!-- <button name="action_fetch_mollie_mandate" type="object" string="Fetch Mandate" class="oe_highlight"/> -->
                </group>
            </xpath>
        </field>
    </record>
</odoo>
