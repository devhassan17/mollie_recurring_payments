<odoo>
    <record id="view_order_form_mollie" model="ir.ui.view">
        <field name="name">sale.order.form.mollie</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_create_mollie_payment"
                        string="Pay via Mollie"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
            </header>
            <sheet position="after">
                <group string="Mollie Recurring Details" colspan="2">
                    <field name="mollie_mandate_id" readonly="1"/>
                    <field name="recurring_next_date" readonly="1"/>
                    <field name="mollie_failure_reason" readonly="1"/>
                </group>
            </sheet>
        </field>
    </record>
</odoo>
