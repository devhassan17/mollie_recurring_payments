<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mandate_setup_success" name="Mollie Mandate Setup Success">
            <t t-call="website.layout">
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-12 text-center">
                            <div class="alert alert-success">
                                <i class="fa fa-check-circle fa-3x mb-3"></i>
                                <h2>Mandate Setup Successful!</h2>
                                <p>Your iDEAL payment was successful and your mandate has been set up.</p>
                                <p>You will now be charged automatically for your subscription renewals.</p>
                            </div>
                            <a href="/my/subscriptions" class="btn btn-primary">View Subscriptions</a>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="mandate_setup_failed" name="Mollie Mandate Setup Failed">
            <t t-call="website.layout">
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-12 text-center">
                            <div class="alert alert-danger">
                                <i class="fa fa-exclamation-circle fa-3x mb-3"></i>
                                <h2>Mandate Setup Failed</h2>
                                <p>There was an issue with your iDEAL payment. Status: <span t-esc="status"/></p>
                                <p>Please try again or contact support.</p>
                            </div>
                            <a t-attf-href="/subscription/mandate/setup/{{subscription.id}}" class="btn btn-primary">Try Again</a>
                            <a href="/contactus" class="btn btn-secondary">Contact Support</a>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>