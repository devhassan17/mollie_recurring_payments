<odoo>
    <record id="view_order_form_mollie_details" model="ir.ui.view">
        <field name="name">sale.order.form.mollie.details</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page string="Mollie Details">
                    <group>
                        <group>
                            <field name="mollie_customer_id"/>
                            <field name="mollie_mandate_id"/>
                            <field name="mollie_mandate_status"/>
                        </group>
                    </group>
                </page>
            </notebook>

        </field>
    </record>
</odoo>

