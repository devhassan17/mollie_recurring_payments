<odoo>
    <record id="view_partner_form_mollie" model="ir.ui.view">
        <field name="name">res.partner.form.mollie.mandate</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <group string="Mollie Recurring Info">
                    <field name="mollie_customer_id" readonly="1"/>
                    <field name="mollie_mandate_id" readonly="1"/>
                    <button name="fetch_mollie_mandate"
                            string="Fetch Mollie Mandate"
                            type="object"
                            class="oe_highlight"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
